@model UAT_TESTINGS.Models.USERDETAILS

@{
    ViewBag.Title = "EditUserDetails";
   
}


  <div>
      <script src="~/scripts/jquery-1.12.4.js"></script>
      <link href="~/Content/themes/base/jquery-ui.min.css" rel="stylesheet" />
      <script src="~/scripts/jquery-ui-1.12.1.min.js"></script>
     
    <h2 style="text-align:center;color:white;background-color:black">EditUserDetails</h2>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- CSS Includes -->
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css">


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal" style="background-color:lightcoral;text-align:center">

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @*@Html.LabelFor(model => model.BatchName, htmlAttributes: new { @class = "control-label col-md-2" })*@
                <div class="col-md-10">
                    @Html.HiddenFor(model => model.BatchName, new { htmlAttributes = new { @class = "form-control" } })
                    @*@Html.ValidationMessageFor(model => model.BatchName, "", new { @class = "text-danger" })*@
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.BatchStartDate, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.BatchStartDate, new { htmlAttributes = new { @class = "datepicker", placeholder = "dd-mm-yyyy" } })
                    @Html.ValidationMessageFor(model => model.BatchStartDate, "", new { @class = "text-danger" })
                </div>
            </div><br /><br />

            <div class="form-group">
                @Html.LabelFor(model => model.BatchEndDate, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.BatchEndDate, new { htmlAttributes = new { @class = "datepicker", placeholder = "dd-mm-yyyy" } })
                    @*@Html.ValidationMessageFor(model => model.BatchEndDate, "", new { @class = "text-danger" })*@
                </div>
            </div><br /><br />

            <div class="form-group">
                @Html.LabelFor(model => model.PreferedAssessmentDate, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.PreferedAssessmentDate, new { htmlAttributes = new { @class = "datepicker", placeholder = "dd-mm-yyyy" } })
                    @Html.ValidationMessageFor(model => model.PreferedAssessmentDate, "", new { @class = "text-danger" })
                </div>
            </div><br /><br />

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">

                    <input type="submit" value="Save" class="btn btn-default" style="background-color:mediumslateblue"/>
                </div>
            </div>
        </div>


    }
</div>
<div style="text-align:center;font-size:x-large;font-weight:700">
    @Html.ActionLink("Back to Users", "Show_details", new { style = "color:Black", @class = "btn btn - success" })
    
</div>
<div style="text-align:center;font-size:large; color:darkblue">
    <img src="~/Nsdcpic.png" style="height:200px;width:400px" />
    <p>&copy;Campus management Corporation 2018</p><br />
</div>
<script>
    $(document).ready(function () {
        $(".datepicker").datepicker({ dateFormat: 'dd-mm-yy' });
    });
</script>
